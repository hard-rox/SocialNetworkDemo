@model IEnumerable<SocialNetDemo.Models.ApplicationUser>

@{
    ViewBag.Title = "My Friends";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Friends</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProfilePic)
        </th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                <a href="~/Friend/FriendProfileView/@item.Id">@item.Name</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                <img src="data:image;base64,@System.Convert.ToBase64String(item.ProfilePic)" width="250" height="auto" alt="No Profile Pic" />
            </td>
        </tr>
    }

</table>
