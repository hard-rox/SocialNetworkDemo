@model SocialNetDemo.Models.ApplicationUser

@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Profile Of @Html.DisplayFor(model => model.Name)</h2>

<div class="jumbotron"
     style="background: url(data:image;base64,@System.Convert.ToBase64String(Model.CoverPic)) no-repeat lavender; background-size: 100% 100%; height: 400px">
    <p><a href="~/Manage/ChangePics" class="btn btn-primary btn-lg">Change &raquo;</a></p>
</div>

<div class="form-horizontal">
    <div class="col-md-3">
        <img src="data:image;base64,@System.Convert.ToBase64String(Model.ProfilePic)" width="250" height="auto" alt="Set Profile Pic" />
        <p><a class="btn btn-default" href="~/Manage/ChangePics">Change &raquo;</a></p>
    </div>
    <div class="col-md-9">
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-md-2" })
            <div>
                @Html.DisplayFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.About, htmlAttributes: new { @class = "col-md-2" })
